<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/userDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:theme="@style/ThemeOverlay.AppCompat.Dark" />

    <TextView
        android:id="@+id/gameDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userDetail"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/timeDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameDetail"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/scoreDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeDetail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/btnDelete"
        android:layout_below="@+id/scoreDetail"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:backgroundTint="@color/Red"
        android:drawableEnd="@drawable/ic_baseline_delete_24"
        android:onClick="delete"/>

</RelativeLayout>