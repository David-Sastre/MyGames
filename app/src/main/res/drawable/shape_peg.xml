<?xml version="1.0" encoding="utf-8"?>
<layer-list   xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The bottom layer is blue square.-->
    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="@color/verde">
            </solid>
            <size
                android:width="10dp"
                android:height="10dp">
            </size>
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <stroke
                android:color="@color/white"
                android:width="2px"/>
        </shape>
    </item>
</layer-list>
